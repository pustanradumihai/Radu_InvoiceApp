@page "{id:int}"
@model RadocInvoice.Pages.DeleteDoctorContractModel
@{
    ViewData["Title"] = "Delete Doctor Contract";
}

<h2>Delete Doctor Contract</h2>

<h4>Are you sure you want to delete this doctor contract?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Doctor Name</dt>
        <dd class="col-sm-10">@Model.DoctorContract.Doctor.Name</dd>

        <dt class="col-sm-2">Contract Expiration Date</dt>
        <dd class="col-sm-10">@Model.DoctorContract.ContractExpirationDate.ToShortDateString()</dd>
    </dl>

    <form method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="/DoctorContracts" class="btn btn-secondary">Cancel</a>
    </form>
</div>
