
@page "{id:int}"
@model RadocInvoice.Pages.DeleteInvoiceModel
@{
    ViewData["Title"] = "Delete Invoice";
}

<h2>Delete Invoice</h2>

<div class="alert alert-danger" role="alert">
    Are you sure you want to delete this invoice?
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Client</th>
            <th>Doctor</th>
            <th>Service</th>
            <th>Quantity</th>
            <th>Date</th>
            <th>Total Price</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Invoice.Client.Name</td>
            <td>@Model.Invoice.Doctor.Name</td>
            <td>@Model.Invoice.Service.Name</td>
            <td>@Model.Invoice.Quantity</td>
            <td>@Model.Invoice.Date.ToString("d")</td>
            <td>@((Model.Invoice.Quantity * Model.Invoice.Price).ToString("C", new System.Globalization.CultureInfo("ro-RO")))</td>
        </tr>
    </tbody>
</table>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="/Invoices" class="btn btn-secondary">Cancel</a>
</form>
