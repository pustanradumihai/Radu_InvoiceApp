@page
@model RadocInvoice.Pages.EditInvoiceModel

@{
    ViewData["Title"] = "Edit Invoice";
}

<h2>Edit Invoice</h2>

<form method="post">

    <input type="hidden" asp-for="Invoice.Id" />

    <div class="form-group">
        <label for="ClientId">Client</label>
        <select asp-for="Invoice.ClientId" class="form-control" asp-items="Model.ClientsList"></select>
    </div>
    <div class="form-group">
        <label for="DoctorId">Doctor</label>
        <select asp-for="Invoice.DoctorId" class="form-control" asp-items="Model.DoctorsList"></select>
    </div>
    <div class="form-group">
        <label for="ServiceId">Service</label>
        <select asp-for="Invoice.ServiceId" class="form-control" asp-items="Model.ServicesList"></select>
    </div>
    <div class="form-group">
        <label for="Quantity">Quantity</label>
        <input type="number" asp-for="Invoice.Quantity" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Price">Price/Qty</label>
        <input type="number" asp-for="Invoice.Price" class="form-control" step="0.01" required />
    </div>
    <div class="form-group">
        <label for="Date">Date</label>
        <input type="date" asp-for="Invoice.Date" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-page="/Invoices" class="btn btn-secondary">Cancel</a>
</form>